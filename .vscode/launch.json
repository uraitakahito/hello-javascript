{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "express",
      "skipFiles": ["<node_internals>/**"],
      // program - an absolute path to the Node.js program to debug.
      "program": "${workspaceFolder}/examples/express/app.cjs",
      "cwd": "${workspaceFolder}/examples/express",
    },
    {
      "name": "Attach by Process ID",
      "processId": "${command:PickProcess}",
      "request": "attach",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha All",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
          "--timeout",
          "999999",
          "--colors",
          "${workspaceFolder}/test"
      ],
      // what kind of console to use, for example, internalConsole, integratedTerminal, or externalTerminal
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
          "<node_internals>/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Current File",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
          "--timeout",
          "999999",
          "--colors",
          "${file}"
      ],
      // what kind of console to use, for example, internalConsole, integratedTerminal, or externalTerminal
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
          "<node_internals>/**/*.js"
      ]
    }
  ]
}
